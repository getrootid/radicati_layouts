{% if content %}
  {% set classes = [
    "rad-two-column",
    settings.layout_width,
    settings.layout_type
  ] %}

  {% if settings.layout_classes is not empty %}
    {% set classes = classes|merge(settings.layout_classes|split(' ')) %}
  {% endif %}

  <div {{ attributes.addClass(classes).setAttribute('id', settings.layout_id) }}>
    <div {{ region_attributes.one.addClass("rad-two-column__left") }}>
      {{ content.one }}
    </div>

    <div {{ region_attributes.two.addClass("rad-two-column__right") }}>
      {{ content.two }}
    </div>
  </div>
{% endif %}
